#include<stdio.h>
void main()
{
int unit;
float amount;
printf("Enter units consumed:");
scanf("%d",&unit);
  if(unit<=50)
     amount=unit*0.50;
  else if(unit<=150)
     amount=25+((unit-50)*0.75);
  else if(unit<=250)
     amount=220+((unit-250)*1.50);
  printf("Electricity bill= Rs.%f",amount);
}
