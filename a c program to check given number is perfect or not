#include<stdio.h>
void main()
{
int i,n,sum=0;
printf("Enter a number:");
scanf("%d",&n);
for(i=1;i<=n/2;i++){
if(n%i==0){
sum=sum+i;
printf("%d proper divisor is\n",i);
printf("%d\n",i);
           }
                    }
printf("The sum of the proper divisors is %d\n",sum);
if(sum==n)
   printf("The given number is a PERFECT NUMBER");
else
   printf("The given number is NOT A PERFECT NUMBER");
}
